<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".common.Length">
    <!-- Input Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Input Unit Text -->
        <TextView
            android:id="@+id/input_unit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kilometer"
            android:textColor="@color/text_color" />

        <!-- Input Value Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input"
                android:inputType="number"
                android:text="@string/_1"
                android:textColor="#363A43"
                android:textColorHint="#7A8089" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- From Label -->
        <TextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/from"
            android:textColor="@color/text_color" />

        <!-- Input Unit RadioGroup -->
        <RadioGroup
            android:id="@+id/i_radio_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/i_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kilometer" />

            <RadioButton
                android:id="@+id/i_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meter" />

            <RadioButton
                android:id="@+id/i_cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/centimeter" />
        </RadioGroup>
    </LinearLayout>

    <!-- Output Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Output Unit Text -->
        <TextView
            android:id="@+id/output_unit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kilometer"
            android:textColor="@color/text_color" />

        <!-- Output Value Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_name_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/output"
                android:inputType="number"
                android:text="@string/_1"
                android:textColor="#363A43"
                android:textColorHint="#7A8089" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- To Label -->
        <TextView
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/to"
            android:textColor="@color/text_color" />

        <!-- Output Unit RadioGroup -->
        <RadioGroup
            android:id="@+id/o_radio_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/o_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kilometer" />

            <RadioButton
                android:id="@+id/o_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meter" />

            <RadioButton
                android:id="@+id/o_cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/centimeter" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>